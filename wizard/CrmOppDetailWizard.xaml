                </StackLayout>

              <!--   <StackLayout x:Name="synclayout" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="false">
                 <Button x:Name="Syncbtn"  Text="Sync to Server" Clicked="syncbtn_Clicked"  BackgroundColor="#414141" TextColor="White"/>
                 </StackLayout>-->
                
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</pages:PopupPage>